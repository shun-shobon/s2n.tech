---
import "@/styles/global.css";

import { Font } from "astro:assets";

import Analytics from "@/components/Analytics.astro";

interface Props {
	title?: string;
	class?: string;
}

const { title, class: className } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="utf8" />
		<meta name="viewport" content="width=device-width" />

		{/* SEO */}
		<title>
			{title ?? "Shuntaro Nishizawa - Web Frontend Developer"}
		</title>
		<meta
			name="description"
			content="学生WebフロントエンドエンジニアShuntaro Nishizawaのポートフォリオサイトです。略歴や制作物などを掲載しています。"
		/>
		<link rel="icon" href="/favicon.ico" sizes="any" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="sitemap" href="/sitemap-index.xml" type="application/xml" />

		{/* OGP */}
		<meta
			property="og:title"
			content="Shuntaro Nishizawa - Web Frontend Developer"
		/>
		<meta
			property="og:description"
			content="学生WebフロントエンドエンジニアShuntaro Nishizawaのポートフォリオサイトです。略歴や制作物などを掲載しています。"
		/>
		<meta property="og:url" content="https://s2n.tech" />
		<meta property="og:image" content="https://s2n.tech/og-image.png" />
		<meta property="og:type" content="website" />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:site" content="@shun_shobon" />

		{/* Analytics */}
		<Analytics
			gtagId={import.meta.env.PUBLIC_GTAG_ID}
			cfWebAnalyticsToken={import.meta.env.PUBLIC_CF_WEB_ANALYTICS_TOKEN}
		/>

		<Font cssVariable="--font-family-caveat" preload />

		<slot name="head" />
	</head>
	<body
		class:list={[
			"min-h-dvh leading-normal text-text-primary antialiased",
			className,
		]}
	>
		<slot />
	</body>
</html>
